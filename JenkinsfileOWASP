pipeline {
	agent any
	stages {
		stage('Checkout SCM') {
			steps {
				git branch: 'main', url: 'https://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@github.com/chowsowying/3x03-Project.git'
			}
		}

		stage('OWASP DependencyCheck') {
			steps {
				dependencyCheck additionalArguments: '--format HTML --format XML'
			}
		}
	}	
	post {
		success {
			dependencyCheckPublisher pattern: 'dependency-check-report.xml'
		}
	}
}
